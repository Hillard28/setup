{
  "font": {
    "size": 12,
    "name": "Adwaita Sans"
  },
  "colors": {
    "bg": {
      "0": "#1d1d20",
      "1": "#28282c",
      "2": "#36363a",
      "3": "#48484b"
    },
    "fg": {
      "0": "#ffffff",
      "1": "#c0c0c0",
      "2": "#808080"
    },
    "accent": "#3584e4",
    "blue": "#3584e4",
    "cyan": "#2190a4",
    "green": "#3a944a",
    "yellow": "#c88800",
    "orange": "#ed5b00",
    "red": "#e62d42",
    "purple": "#9141ac"
  },
  "border": {
    "width": 1,
    "color": "$bg2"
  },
  "outline": {
    "width": 1,
    "color": "$fg1"
  },
  "spacing": 10,
  "shadow": true,
  "radius": 15,
  "window": {
    "padding": 15,
    "opacity": 1,
    "margin": 10,
    "border": {
      "width": 1,
      "color": "$bg2"
    },
    "outline": {
      "width": 1,
      "color": "$fg1"
    },
    "shadow": {
      "offset": [
        0,
        0
      ],
      "blur": 10,
      "spread": 0,
      "color": "black",
      "opacity": 0.4
    }
  },
  "bar": {
    "bg": "$bg0",
    "opacity": 0.85,
    "margin": [
      0,
      0,
      0,
      0
    ],
    "padding": 6,
    "spacing": 6,
    "border": {
      "width": 1,
      "color": "$bg0"
    },
    "shadow": {
      "offset": [
        0,
        0
      ],
      "blur": 30,
      "spread": 0,
      "color": "black",
      "opacity": 0.4
    },
    "button": {
      "fg": "$fg0",
      "padding": [
        0,
        7
      ],
      "bg": {
        "default": "$bg0",
        "hover": "$bg1",
        "active": "$bg2"
      },
      "opacity": 1,
      "border": {
        "width": 0,
        "color": "$bg2"
      }
    }
  }
}
